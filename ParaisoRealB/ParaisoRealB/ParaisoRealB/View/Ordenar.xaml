<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="ParaisoRealB.View.Ordenar">


    <ScrollView>
        <StackLayout>
            <StackLayout>
                <Image Source="collage.png"
                       HorizontalOptions="FillAndExpand"></Image>
            </StackLayout>
            <StackLayout Margin="20">
               

                <Label Text="{Binding id}"
                       x:Name="idd"></Label>


                <Label Text="{Binding nomproducto}"
                       FontSize="20"
                       TextColor="#FF5722"
                           x:Name="nomproduct"></Label>



                <Label Text="{Binding precio}"
                       FontAttributes="Bold"
                       FontSize="20"
                       TextColor="Gray"
                       x:Name="price"></Label>



                <Label Text="{Binding descripcion}"
                       FontSize="20"
                       TextColor="Gray"></Label>


                <Entry
                    x:Name="cantidad"
                    AnchorY="50" Keyboard="Numeric"></Entry>

                <Label
                    Text="Total"
                    FontSize="20"
                    FontAttributes="Bold"
                    TextColor="#FF5722"
                    x:Name="Total">
                </Label>

                <Button
                    x:Name="btnordenar"
                    BackgroundColor="#FF5722" 
                    TextColor="White"
                    HorizontalOptions="CenterAndExpand"
                    
                    BorderColor="Transparent"
                    Clicked="BtnOrdenar_Clicked"
                    Text="Ordernar">

                    <!--BorderRadius="20"-->

                </Button>

                <Button
                    x:Name="btnverOrden"
                    BackgroundColor="#FF5722" 
                    TextColor="White"
                    HorizontalOptions="CenterAndExpand"
                    
                    BorderColor="Transparent"
                    Clicked="BtnverOrden_Clicked"
                    Text="ver Orden">
                </Button>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>