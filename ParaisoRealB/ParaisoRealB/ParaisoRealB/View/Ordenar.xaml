<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ParaisoRealB.ViewModel"
             x:Class="ParaisoRealB.View.Ordenar">


    <ContentPage.BindingContext>
        <vm:OrdenVM></vm:OrdenVM>
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout>
            <StackLayout>
                <Image Source="bannerDesayuno"></Image>
            </StackLayout>

           
            <StackLayout Margin="20">
                <Label Text="Cantidad a Ordenar"></Label>
                <Entry></Entry>
                <Button BackgroundColor="#FF5722" 
                    TextColor="White"
                    HorizontalOptions="CenterAndExpand"
                    BorderRadius="20"
                    BorderColor="Transparent"
                    Command="{Binding OrdenarCommand}"
                    Text="Ordernar">
                </Button>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>