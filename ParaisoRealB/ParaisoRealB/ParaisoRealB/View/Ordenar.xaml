<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ParaisoRealB.ViewModel"
             x:Class="ParaisoRealB.View.Ordenar">

    <ContentPage.BindingContext>
        <vm:OrdenarVM></vm:OrdenarVM>
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout>
            <StackLayout>
                <Image Source="bannerDesayuno"></Image>
            </StackLayout>
            <StackLayout Margin="20">
                <Label Text="0"
                       x:Name="cant"
                       Grid.Column="0"
                       Grid.Row="2">

                </Label>
                <Stepper Increment="1"
                         Minimum="0"
                         Value="{Binding NumPlatos}"
                         ValueChanged ="Stepper_ValueChanged"
                         Grid.Column="1"
                         Grid.Row="2">
                </Stepper>

                <Label               
                    x:Name="price"
                    Text="{Binding precioproperty}">
                </Label>

                <Label
                    x:Name="ttal"
                    Text="Total">
                </Label>
               
                <Button
                    x:Name="btnOrdenar"
                    BackgroundColor="#FF5722" 
                    TextColor="White"
                    HorizontalOptions="CenterAndExpand"
                    BorderRadius="20"
                    BorderColor="Transparent"
                    Command="{Binding btnOrdenar}"
                    Text="Ordernar">
                </Button>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>