<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ParaisoRealB.ViewModel"
             x:Class="ParaisoRealB.View.MenuDesayuno"
             BackgroundColor="White">

    <ContentPage.BindingContext>
        <vm:MenuDVM></vm:MenuDVM>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <StackLayout>
                    <Image Source="bannerDesayuno" Aspect="AspectFill"></Image>
                </StackLayout>
                
                <StackLayout>
                    <Label Text="Elija el combo que mas le guste!!"
                           TextColor="Black"
                           FontAttributes="Bold"
                           FontSize="24"
                           HorizontalOptions="CenterAndExpand">
                    </Label>
                </StackLayout>
                <ListView ItemsSource="{Binding ListMenu}"
                          HasUnevenRows="True"
                          SeparatorVisibility="None"
                          BackgroundColor="White"
                          >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell >
                                <StackLayout Padding="20" BackgroundColor="White">
                                    <Frame CornerRadius="20" Padding="5">
                                        <StackLayout Orientation="Horizontal">
                                            <BoxView BackgroundColor="#FF5722" WidthRequest="4"></BoxView>
                                            <Grid VerticalOptions="CenterAndExpand">
                                                <Grid.ColumnDefinitions>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition></RowDefinition>
                                                    <RowDefinition></RowDefinition>
                                                    <RowDefinition></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <StackLayout Grid.Row="0" Orientation="Horizontal">
                                                    <Label
                                            Text="{Binding nomproducto}"
                                            TextColor="#FF5722"
                                            FontAttributes="Bold"
                                            FontSize="20"></Label>
                                                    <Label 
                                            Text="{Binding precio}"
                                           HorizontalOptions="EndAndExpand"
                                           TextColor="#FF5722"
                                            FontAttributes="Bold"
                                            FontSize="20"></Label>
                                                </StackLayout>
                                                <StackLayout Grid.Row="1">
                                                    <Label Text="{Binding descripcion }"></Label>
                                                </StackLayout>
                                                <StackLayout  Grid.Row="2">
                                                    <Button BackgroundColor="#FF5722" 
                                                            TextColor="White"
                                                            HorizontalOptions="EndAndExpand"
                                                            BorderRadius="20"
                                                            BorderColor="Transparent"
                                                            x:Name="btndesayuno"
                                                            Clicked="Btndesayuno_Clicked"
                                                            Text="Ordernar"
                                                            ></Button>
                                                </StackLayout>
                                            </Grid>
                                        </StackLayout>
                                    </Frame>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
