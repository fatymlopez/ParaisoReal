<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParaisoRealB.View.MenuAntojitos"
             BackgroundColor="White">

    <StackLayout>
        <StackLayout>
            <Image Source="Desayunos.jpg" 
                   Aspect="AspectFill">
            </Image>
        </StackLayout>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Text="Ordena tu Antojito Aqui"
                       TextColor="Black"
                       FontAttributes="Bold"
                        FontSize="{OnIdiom  Default=15, Phone=20, Tablet=24}"
                       HorizontalOptions="Center"
                       VerticalOptions="CenterAndExpand"
                       Grid.Row="0">
                </Label>
                <ActivityIndicator x:Name="indicatoran"
                           HorizontalOptions="Center"
                           VerticalOptions="Start"
                           Grid.Row="0"
                           Color="#c3c3c3">
                </ActivityIndicator>
            </Grid>
        </StackLayout>
       
        <ListView x:Name="ListAntojitos"
                  HasUnevenRows="True"
                  SeparatorVisibility="None"
                  BackgroundColor="White"
                  ItemSelected="ListAntojitos_ItemSelected">
            <ListView.Header>
                <StackLayout HorizontalOptions="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Button Text="Ver Antojitos"
                            x:Name="btnAntojitos"
                            Clicked="BtnAntojitos_Clicked"
                            BackgroundColor="#FF5722" 
                            TextColor="White"
                            BorderColor="Transparent"
                            BorderRadius="23" 
                            Grid.Column="0"
                            Grid.Row="0"
                            FontAttributes="Bold"
                            FontSize="{OnIdiom  Default=10, Phone=12, Tablet=15}">
                    </Button>
                    <Button Text="Bebidas Frias"
                            BackgroundColor="#FF5722" 
                            TextColor="White"
                            x:Name="btnbebidasf"
                            Clicked="Btnbebidasf_Clicked"
                            BorderRadius="23" 
                            BorderColor="Transparent"
                            Grid.Column="1"
                            Grid.Row="0"
                            FontAttributes="Bold"
                            FontSize="{OnIdiom  Default=10, Phone=12, Tablet=15}">
                    </Button>
                    <Button Text="Bebidas Calientes"
                            BackgroundColor="#FF5722" 
                            TextColor="White"
                            x:Name="btnbebidac"
                            Clicked="Btnbebidac_Clicked"
                            BorderRadius="23" 
                            BorderColor="Transparent"
                            Grid.Column="2"
                            Grid.Row="0"
                            FontAttributes="Bold"
                            FontSize="{OnIdiom  Default=10, Phone=12, Tablet=15}">
                    </Button>
                </Grid>
                </StackLayout>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell >
                        <StackLayout Padding="20" BackgroundColor="White">
                            <Frame CornerRadius="20" Padding="5">
                                <StackLayout Orientation="Horizontal">
                                    <BoxView BackgroundColor="#FF5722" WidthRequest="4"></BoxView>
                                    <Grid VerticalOptions="CenterAndExpand">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"></ColumnDefinition>
                                            <ColumnDefinition Width="3*"></ColumnDefinition>
                                            <ColumnDefinition Width="3*"></ColumnDefinition>
                                            <ColumnDefinition Width="3*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <StackLayout Grid.Row="0"
                                                     Grid.Column="0"
                                                     Orientation="Horizontal">
                                            <Label Text="{Binding nomproducto}"
                                                   TextColor="#FF5722"
                                                   FontAttributes="Bold"
                                                   FontSize="{OnIdiom  Default=15, Phone=16, Tablet=20}">
                                            </Label>
                                        </StackLayout>
                                        <StackLayout Grid.Row="0" 
                                                     Grid.Column="2" 
                                                     Grid.ColumnSpan="2"
                                                     Orientation="Horizontal">
                                            <Label Text="Precio"
                                                   HorizontalOptions="End"
                                                   HorizontalTextAlignment="End"
                                                   TextColor="#FF5722"
                                                   FontAttributes="Bold"
                                                   FontSize="{OnIdiom  Default=15, Phone=16, Tablet=20}">
                                            </Label>
                                            <Label Text="$"
                                                   HorizontalOptions="End"
                                                   HorizontalTextAlignment="End"
                                                   TextColor="#FF5722"
                                                   FontAttributes="Bold"
                                                   FontSize="{OnIdiom  Default=15, Phone=16, Tablet=20}">
                                            </Label>
                                            <Label Text="{Binding precio}"
                                                   HorizontalOptions="End"
                                                   HorizontalTextAlignment="End"
                                                   TextColor="#FF5722"
                                                   FontAttributes="Bold"
                                                   FontSize="{OnIdiom  Default=15, Phone=16, Tablet=20}">
                                            </Label>
                                        </StackLayout>
                                        <StackLayout Grid.Row="1" 
                                                     Grid.ColumnSpan="4"
                                                     Grid.Column="0">
                                            <Label Text="{Binding descripcion}"
                                                   TextColor="Gray"
                                                   FontAttributes="Bold"
                                                   FontSize="{OnIdiom  Default=15, Phone=16, Tablet=20}">
                                            </Label>
                                        </StackLayout>
                                    </Grid>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>


    