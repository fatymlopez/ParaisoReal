<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParaisoRealB.View.VerOrden"
             xmlns:vm="clr-namespace:ParaisoRealB.ViewModel"
             BackgroundColor="White">

    <ContentPage.BindingContext>
        <vm:VerOrdenVM></vm:VerOrdenVM>
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout>
            <StackLayout>
                <Image Source="bannerDesayuno"></Image>
            </StackLayout>

            <StackLayout Margin="20">
                <Label Text="Total a Pagar"></Label>
                <Label Text="">
                    
                </Label>

                <Label Text="Seleccione su Ubicacion"></Label>
                <Picker x:Name="category" Title="Seleccione una Ubicacion"
                        FontAttributes="Bold"
                        ItemDisplayBinding="{Binding nomubicacion}"
                        SelectedItem="{Binding selectcategory}"
                        ItemsSource="{Binding Itemcategory}"></Picker>




                <Button Text="Agregar Algo mas"        
                     HeightRequest="46"
                     BorderRadius="23"                
                     BackgroundColor="Transparent"                   
                     TextColor="Black"                   
                     Margin="10,0"
                    Grid.Column="1"
                     x:Name="Agregar"
                        Clicked="Agregar_Clicked">
                </Button>


                <Button Text="Cancelar Orden"        
                     HeightRequest="46"
                     BorderRadius="23"                
                     BackgroundColor="Transparent"                   
                     TextColor="Black"                   
                     Margin="10,0"
                    Grid.Column="1"
                        x:Name="cancelar"
                        Clicked="Cancelar_Clicked">
                </Button>

         

                <Button Text="Reservar Orden" 
                    FontSize="Small"   
                    HeightRequest="46"
                    BorderRadius="23"                
                    BackgroundColor="#FF5722"                   
                    TextColor="White"                   
                    Margin="10,0"
                    HorizontalOptions="CenterAndExpand"
                    x:Name="Ordenar"
                        Clicked="Ordenar_Clicked">

                    <!--Command="{Binding DecisionCommand}"-->
                </Button>
            </StackLayout>

            
        </StackLayout>
    </ScrollView>
</ContentPage>